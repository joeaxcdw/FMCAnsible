{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 8080
            }
        },
        {
            "name": "OLD: Ansible Playbook",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "args": [
                "playbooks/fmc_configuration/latest.yml",
                "-i",
                "/etc/ansible/hosts",
                "-vvvv",
                "--flush-cache"
            ],
            "console": "integratedTerminal"
        }
    ]
}